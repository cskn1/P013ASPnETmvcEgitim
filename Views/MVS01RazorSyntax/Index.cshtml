@{
    //burası c# kodu yazma alanı view sayfalarındaki @ işareti ile c# yazmaya razor syntax ı denir.
    string adi="coskun";
    string soyadi = "yılmaz";//c# değişkeni tanımyabilirsiniz
    string baslik = "mv01 razor syntax";
    string[] isimler = { "ali", "veli", "alp" }; // dizi tanımyabiliriz
}
<h1>
    @baslik
</h1>
<h2>
    Adı:@adi
</h2>
<h3>
    Soyadı:@soyadi
</h3>
<h4>
    İsimler
</h4>
@foreach (var ad in isimler){

    @ad
    <hr/>
}
@foreach (var ad in isimler)
{  
    <h5>
        @ad
    </h5>
}
@for( int i=0; i<5; i++){

    <h6>
        @i
    </h6>
}